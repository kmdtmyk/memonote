<div class='ui container'>

  <h1>memo list</h1>

  <div>

    <div class='ui menu'>
      <form class='item'>
        <div class='ui icon input search'>
          <input class='prompt' type='seach' placeholder='search' name='q'>
          <i class='search icon'></i>
        </div>
      </form>
      <div class='right item'>
        <a class='ui button primary' href='/memo/new'>new memo</a>
      </div>
    </div>

    <table class='ui table celled'>
      <thead>
        <tr>
          <th>id</th>
          <th>title</th>
          <th>comments</th>
        </tr>
      </thead>
      <tbody>
        <% memos.forEach((memo) => { %>
          <tr>
            <td>
              <%= memo.id %>
            </td>
            <td>
              <a href='/memo/<%= memo.id %>'><%= memo.title %></a>
            </td>
            <td>
              <%= memo.comments.length %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</div>
